<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#5c5c98" />
      <stroke
          android:width="2dp"/>
        <!--  android:color="#000000" -->
      <corners
          android:radius="3dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#7474BF"
          android:endColor="#348AC7"
          android:angle="270" />
      <stroke
          android:width="2dp"/>
        <!-- android:color="#A8A8A8" -->
     <corners
         android:radius="2dp" />
     <padding
         android:left="5dp"
         android:top="5dp"
         android:right="5dp"
         android:bottom="5dp" />
   </shape>
 </item>
</selector>