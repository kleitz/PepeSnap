<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jonathanrobins.pepepix.PictureActivity"
    android:id="@+id/mainRelativeLayout">

    <ImageView android:id="@+id/picture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="#ffffffff"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/backButton"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="24dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="74dp"
        android:id="@+id/pepeButton"
        android:background="@drawable/pepepicturesicon"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/doneButton"
        android:layout_marginLeft="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/deleteButton"
        android:background="@drawable/rounded_button"
        android:textSize="23dp"
        android:layout_alignTop="@+id/pepeButton"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/increaseButton"
        android:layout_marginRight ="20dp"
        android:textColor="#ffff0014" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/increaseButton"
        android:background="@drawable/rounded_button"
        android:textSize="30dp"
        android:layout_alignTop="@+id/pepeButton"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/decreaseButton"
        android:layout_marginRight ="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/decreaseButton"
        android:background="@drawable/rounded_button"
        android:textSize="35dp"
        android:layout_alignTop="@+id/increaseButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doneButton"
        android:background="@drawable/rounded_button"
        android:textSize="0dp"
        android:layout_alignTop="@+id/decreaseButton"
        android:layout_toRightOf="@+id/decreaseButton"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/save"
        android:background="@drawable/save"
        android:focusable="false"
        android:layout_marginBottom="9dp"
        android:layout_alignBottom="@+id/doneButton"
        android:layout_toLeftOf="@+id/pepeButton"
        android:layout_toStartOf="@+id/pepeButton"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:animateLayoutChanges="true"
        android:id="@+id/pictureScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#657f7777"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="800dp"
        android:layout_weight = "0.55"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5ea29999"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pepeButton"
            android:layout_toStartOf="@+id/pepeButton">

            <ImageView
                android:id="@+id/pic0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="94dp"
                android:src="@drawable/pic0" />
            <ImageView
                android:id="@+id/pic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pic0"
                android:layout_below="@+id/pic0"
                android:layout_marginTop="14dp"
                android:src="@drawable/pic1" />
            <ImageView
                android:id="@+id/pic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pic1"
                android:layout_below="@+id/pic1"
                android:layout_marginTop="14dp"
                android:src="@drawable/pic2" />
            <ImageView
                android:id="@+id/pic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pic2"
                android:layout_below="@+id/pic2"
                android:layout_marginTop="14dp"
                android:src="@drawable/pic3" />
        </RelativeLayout>
    </ScrollView >
</RelativeLayout>
